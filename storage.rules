rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    function isValidImageSize() {
      // Max 10MB por imagem
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Property images - organized by tenant
    match /properties/{tenantId}/{propertyId}/{imageId} {
      // Read: authenticated users from same tenant
      allow read: if isAuthenticated();

      // Write: authenticated users uploading images
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidImageSize();

      // Delete: authenticated users (cleanup)
      allow delete: if isAuthenticated();
    }

    // Broker profile photos
    match /brokers/{tenantId}/{brokerId}/{fileName} {
      allow read: if true; // Public read (profile photos)
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidImageSize();
    }

    // Tenant logos (whitelabel - MVP+1)
    match /tenants/{tenantId}/{fileName} {
      allow read: if true; // Public read
      allow write: if isAuthenticated()
                   && isImage()
                   && isValidImageSize();
    }

    // Temporary uploads (para processamento)
    match /temp/{tenantId}/{allPaths=**} {
      allow read, write: if isAuthenticated()
                         && isImage()
                         && isValidImageSize();

      // Auto-delete apÃ³s 24h (configurar lifecycle policy no console)
    }

    // Default: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
